{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "removeComments": true,
    "skipLibCheck": true,
    "strict": true,
    "composite": true,
    "declaration": true,

		// 引用需要在这里配置，unity-ts中的tsconfig.json中配置无效
    "paths": {
      "@lib": ["./packages/lib/src"],
      "@lib/*": ["./packages/lib/src/*"],
    }
  }
}

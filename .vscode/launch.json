    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm run start",
            "name": "Run npm start",
            "cwd": "${workspaceFolder}/electron_ts",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Electron Main",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/electron_ts/node_modules/.bin/electron",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
                "${workspaceFolder}/electron_ts"
            ],
        }       
    ]
}
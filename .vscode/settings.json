{
    "editor.detectIndentation": false,
    "filewatcher.commands": [
        {
            "match": "\\.js",
            "event": "onFileChange",
            "cmd": "node ${file}"
        },
        {
            "match": "\\.ts",
            "event": "onFileChange",
            "cmd": "ts-node ${file}"
        },
        {
            "match": "\\.proto",
            "event": "onFileChange",
            "cmd": "protoc --plugin=protoc-gen-ts_proto=${workspaceRoot}\\node_modules\\.bin\\protoc-gen-ts_proto.cmd --proto_path=${fileDirname} --ts_proto_opt=onlyTypes=true --ts_proto_out=${fileDirname} ${file}"
        }
    ],
    "filewatcher.autoClearConsole": true
}
{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".jsx",
                    ".ts",
                    ".tsx"
                ]
            }
        }
    },
    "rules": {
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never",
                "jsx": "never",
                "ts": "never",
                "tsx": "never"
            }
        ],
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
        "linebreak-style": "off",
        "no-plusplus": "off",
        "no-console": "off",
        "indent": "off",
        "lines-between-class-members": "off",
        "no-useless-constructor": "off",
        "no-unused-vars": "off",
        "no-empty-function": "off",
        "no-inner-declarations": "off",
        "max-classes-per-file": "off",
        "class-methods-use-this": "off",
        "max-len": "off"
    }
}